<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Información General</h3>
        <div class="campo">
            <label for="">Título</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" id="empresa" name="empresa" placeholder="Empresa reclutadora" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: Argentina o remoto" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="Ej: 500 USD" required>
        </div>
        <div class="campo">
            <label for="">Contrato</label>
            <select name="" id="">
                <option value="" disabled selected>-- Seleccione --</option>
                <option value="freelance">Freelance</option>
                <option value="full">Full time</option>
                <option value="part">Part time</option>
                <option value="proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" name="descripcion" id="x">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>
      <div class="campo centrar-horizontal">
        <input type="hidden" name="skills" id="skills">
        <input type="submit" value="Publicar" class="btn btn-azul">
      </div>
    </form>
</main>